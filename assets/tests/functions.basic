fileLocalVariable = 42

Function f1(name)
    Return "Hello " + name + "!"
End

Function f2(x, y)
    Print "Sum of " + x + " and " + y + " is " + (x + y)
    return x + y
End

Function f3()
    Print "File local variable is now: " + fileLocalVariable
    fileLocalVariable = f1(name="World")
End

Print "Basic function calls"
Print "---------------------"
Print f1(name="Daniel")
f2(x=1, y=2)
f2(x=f2(x=1, y=2), y=f2(x=3, y=4)+f2(x=5, y=5))
f3()
f3()

Print
Print "Testing correctness"
Print "-------------------"
z = f2(x=10, y=20)
Print "Is result correct? " + (z == 30)

