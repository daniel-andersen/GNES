Class Sprite
    Property visible = False

    Property x = 0
    Property y = 0
    Property width = 0
    Property height = 0

    Property anchor = New Vector(x=0.5, y=0.5)

    Update
        Invoke update() In Sprite
    End

    Function load(filename)
        Invoke load(filename=filename) In Sprite
    End

    Function show()
        Invoke show() In Sprite
    End

    Function hide()
        Invoke hide() In Sprite
    End
End
