Behaviour AirDrag
    Required Behaviour movement Of Type Movement
    Optional Behaviour gravity Of Type Gravity

    Property drag = 30.0

    Update
        effectiveDrag = 1 - ((drag / 100) * Screen.frameSpeed)
        If effectiveDrag < 0 Then
            effectiveDrag = 0
        End

        movement.velocity.x = movement.velocity.x * effectiveDrag
        If gravity == None Then
            movement.velocity.y = movement.velocity.y * effectiveDrag
        End
    End
End
