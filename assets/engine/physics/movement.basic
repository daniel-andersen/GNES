Behaviour Movement
    Optional Behaviour gravity Of Type Gravity

    Property speed = 10
    Property jumpVelocity = 20

    Property velocity = New Vector()

    Function moveLeft()
        velocity.x = -speed
    End

    Function moveRight()
        velocity.x = speed
    End

    Function moveUp()
        If gravity != None Then
            If velocity.y == 0 Then
                velocity.y = -jumpVelocity
            End
        Else
            velocity.y = -speed
        End
    End

    Function moveDown()
        If gravity == None Then
            velocity.y = speed
        End
    End

    Update
        x = x + velocity.x
        y = y + velocity.y

        velocity.x = 0
        If gravity == None Then
            velocity.y = 0
        End
    End
End
